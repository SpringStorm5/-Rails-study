<%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :commenter %>
  <%= error_span(@comment[:commenter]) %>
  <%= f.input :body %>
  <%= error_span(@comment[:body]) %>
  <%= f.input :article_id %>
  <%= error_span(@comment[:article_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn btn-default' %>
<% end %>
